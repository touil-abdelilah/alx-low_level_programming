CC = gcc  # Compiler (replace with your compiler if needed)

SRC = *.c  # Pattern for all source files (.c)

OBJ = $(SRC:.c=.o)  # Pattern for object files (%.o)
                    # (% is a wildcard that expands to the stem of the source file name)

NAME = school  # Name of the executable

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)  # Link object files to create the executable

.PHONY: clean  # Define a phony target for cleaning

clean:
	rm -f $(OBJ) $(NAME)  # Remove object files and the executable
