CC = gcc

SRC = $(wildcard *.c)

NAME = school

RM = rm -f  # Assuming 'rm' is available (adjust if needed)

all: $(NAME)

$(NAME): $(SRC) m.h  # Explicit dependency on header file
	$(CC) $(foreach f,$(SRC),-c $f) -o $(NAME)  # Compile each source file

clean oclean fclean re:
	@-$(RM) $(NAME) $(filter-out $(SRC), $(wildcard *~))

.PHONY: all clean oclean fclean re
